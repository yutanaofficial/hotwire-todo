<%= form_with(model: todo, id: "#{dom_id(todo)}_form") do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="my-5">
    <%= form.label :name, class: 'font-medium' %>
    <div class="flex flex-col min-[500px]:flex-row">
      <%= form.text_field :name, class: "shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full bg-transparent hover:border-blue-600" %>

    <div class="field">
    <%= form.label :subject , class: 'font-medium' %>
    <div class="flex flex-col min-[500px]:flex-row">
    <%= form.select :subject, ['worker', 'delivery', 'maid'], class: "shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full bg-transparent hover:border-blue-600 appearance-none"   %>
  </div>

  <div class="field">
    <%= form.label :email, class: 'font-medium' %>
    <div class="flex flex-col min-[500px]:flex-row">
    <%= form.text_field :email, class: "shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full bg-transparent hover:border-blue-600" %>
  </div>
  
  <div class="field">
    <%= form.label :due_date , class: 'font-medium' %>
    <div class="flex flex-col min-[500px]:flex-row">
    <%= form.date_field :due_date ,min: Date.today ,  class: "shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full bg-transparent hover:border-blue-600" %>
  </div>
  <%= form.submit class: "rounded-lg px-3 py-2 mt-2 ml-0 min-[400px]:ml-3 text-blue-600 hover:text-white border border-blue-600 hover:bg-blue-600 font-medium cursor-pointer" %>
 
<% end %>
